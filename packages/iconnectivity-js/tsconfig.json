{
  "compilerOptions": {
    "outDir": "lib",

    /* Language and Environment */
    "target": "ES2020",

    /* Modules */
    "module": "commonjs",

    /* Interop Constraints */
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    /* Completeness */
    "skipLibCheck": true /* Skip type checking all .d.ts files. */
  }
}
